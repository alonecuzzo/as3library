package com.atmospherebbdo.animation {	import gs.TweenLite;		import com.atmospherebbdo.animation.IAnimation;	import com.atmospherebbdo.dbc.precondition;	import com.atmospherebbdo.util.IDestroyable;		/**	 * @author markhawley	 * 	 * An IAnimation implementation for TweenLite animations.	 */	public class TweenLiteAnimation implements IAnimation, IDestroyable	{		private var impl:TweenLite;				private var _isDestroyed:Boolean = false;		/**		 * Constructor.		 * 		 * @param	impl	TweenLite, a TweenLite object.		 */		public function TweenLiteAnimation( impl:TweenLite )		{			this.impl = impl;			}				/**		 * Cleanup.		 */		public function destroy() :void		{			 precondition(!isDestroyed());			 			 impl = null;			 			_isDestroyed = true;		}		/**		 * Start an animation.		 */		public function start() :void		{			precondition(!isDestroyed());			 			impl.activate();		}				/**		 * Stop an animation.		 */		public function stop() :void		{			precondition(!isDestroyed());			 			impl.active = false;		}
		
		public function isDestroyed():Boolean
		{			return _isDestroyed;		}	}}