package com.atmospherebbdo.util.displayobject {	import com.atmospherebbdo.assertions.fail;	import com.atmospherebbdo.util.displayobject.AbstractAlignment;		/**	 * @author markhawley	 */	public class VerticalAlignment extends AbstractAlignment 	{		private static var initialized:Boolean = false;				public static const MIDDLE:VerticalAlignment = new VerticalAlignment( "middle" );		public static const TOP:VerticalAlignment = new VerticalAlignment( "top" );		public static const BOTTOM:VerticalAlignment = new VerticalAlignment( "bottom" );				{			initialized = true;		}				public function VerticalAlignment(name:String)		{			if (initialized)			{				fail("This class is intended to only be instantiated at " +					"compile time.");			}						super(name);		}	}}