package com.atmospherebbdo.util.contextmenu {	import flash.display.InteractiveObject;	import flash.ui.ContextMenu;	import flash.ui.ContextMenuItem;			/**	 * @author markhawley	 * 	 * Customizes the context menu for a given InteractiveObject.	 * 	 * @param	io	the object that will get the custom context menu	 * @param	...	a number of ContextMenuItems		 */	public function customizeContextMenu( io:InteractiveObject, ...rest ) :void	{			var cm:ContextMenu = new ContextMenu();		cm.hideBuiltInItems();		for (var i:Number=0; i < rest.length; i++)		{			var cmi:ContextMenuItem = rest[i] as ContextMenuItem;			cm.customItems.push(cmi);			}		io.contextMenu = cm;	}}