package com.atmospherebbdo.util {	import com.atmospherebbdo.util.displayobject.FrameUpdater;	import com.atmospherebbdo.util.displayobject.UpdateEvent;	import com.atmospherebbdo.util.number.RollingAverage;	import com.atmospherebbdo.util.number.truncate;		import flash.text.TextField;		/**	 * @author markhawley	 * 	 * A TextField that shows the current avg FPS.	 */	public class FPSCounter extends TextField 	{		private var avg:RollingAverage = new RollingAverage();				/**		 * Constructor.		 */		public function FPSCounter()		{			FrameUpdater.instance.addEventListener(UpdateEvent.UPDATE, onUpdate);		}				/**		 * Handler for UpdateEvents -- called once per frame, it updates		 * this text field with a rolling average of the last 10 FPS counts.		 */		private function onUpdate(event:UpdateEvent) :void		{				text = truncate(avg.update(event.fps), 2) + "fps";		}	}}